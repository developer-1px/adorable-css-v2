{
	"name": "homepage-kit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"build:gh-pages": "vite build && touch build/.nojekyll",
		"deploy:gh-pages": "npm run build:gh-pages && npx gh-pages -d build --dotfiles"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@shikijs/transformers": "^3.7.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/markdown-it": "^14.1.2",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-adorable-css": "workspace:*",
		"eslint-plugin-svelte": "^3.9.3",
		"gh-pages": "^6.3.0",
		"globals": "^16.0.0",
		"highlight.js": "^11.11.1",
		"markdown-it": "^14.1.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"shiki": "^3.7.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@codemirror/autocomplete": "^6.18.6",
		"@codemirror/commands": "^6.8.1",
		"@codemirror/lang-css": "^6.3.1",
		"@codemirror/lang-html": "^6.4.9",
		"@codemirror/state": "^6.5.2",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.38.0",
		"@inlang/paraglide-js": "^2.0.0",
		"adorable-css": "workspace:*",
		"adorable-css-cdn": "workspace:*",
		"codemirror": "^6.0.2",
		"gray-matter": "^4.0.3",
		"lucide-svelte": "^0.522.0",
		"prismjs": "^1.30.0"
	}
}
